            = link_to '講座影片', '#'
          div(class="block-news-category-link-2")
            = link_to '大學新鮮人特輯', '#', style: 'font-size: 10px;'
          div(class="block-news-category-link-3")
            = link_to '學測申請', '#'
          div(class="block-news-category-link-4")
            = link_to '影劇評論', '#'
        div(class="block-news-category-links")
          div(class="block-news-category-link-1")
            = link_to '志願選填', '#'
          div(class="block-news-category-link-2")
            = link_to '指考準備', '#'
